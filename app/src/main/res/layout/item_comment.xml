<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white">

    <!-- TextView để hiển thị tên người đánh giá -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginBottom="5dp">

        <!-- ImageView -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/round_img"
        android:layout_gravity="center" />


        <!-- TextView -->
        <TextView
            android:id="@+id/customerNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:text="Ngọc Trâm"
            android:textSize="16sp" />
    </LinearLayout>
    <!-- TextView để hiển thị đánh giá -->
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_star_rate_24" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_star_rate_24" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_star_rate_24" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_star_rate_24" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_star_rate_24" />
    </LinearLayout>

    <!-- TextView để hiển thị bình luận -->
    <TextView
        android:id="@+id/commentTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dịch vụ của shop sử dụng rất tốt, giá cả hợp lý"
        android:textSize="18sp" />

</LinearLayout>
