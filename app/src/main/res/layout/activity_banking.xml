<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Banking">

    <include
        android:id="@+id/include"
        layout="@layout/toolbar_banking" />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="340dp"
        android:layout_height="104dp"

        android:layout_marginTop="16dp"
        android:background="#FF0000"
        android:backgroundTint="#F2F6FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="262dp"
            android:layout_height="57dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Liên kết thẻ tín dụng, thẻ ghi nợ hoặc tài khoản ngân hàng"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/banking1" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:text="Thêm liên kết"
            android:textColor="#1980D1"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="53dp"
            android:layout_height="30dp"
            android:layout_marginLeft="122dp"
            android:layout_marginTop="69dp"
            app:srcCompat="@drawable/baseline_arrow_forward_green" />
    </FrameLayout>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="314dp"
        android:layout_height="38dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:text="Mở nhanh tài khoản ngân hàng"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/textView12"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout"
        app:srcCompat="@drawable/banking2" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="360dp"
        android:layout_height="39dp"
        android:layout_marginTop="12dp"
        android:text="Bảo mật, miễn phí, không cần tới phòng giao dịch"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.686"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="353dp"
        android:layout_height="152dp"

        android:layout_marginTop="10dp"
        android:background="#FF0000"
        android:backgroundTint="#F2F6FF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16">

        <TextView
            android:id="@+id/textView33"
            android:layout_width="143dp"
            android:layout_height="41dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:text="S"
            android:textColor="#0022FF"
            android:textSize="25sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="143dp"
            android:layout_height="41dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="17dp"
            android:text="acombank"
            android:textColor="#0022FF"
            android:textSize="18sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="235dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="70dp"
            android:text="Mở tài khoản Sacombank trên ZaloPay, nhận ngay gói ưu đãi 1.000.000đ"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="260dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/banking3" />

        <ImageView
            android:id="@+id/imageView15"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="243dp"
            android:layout_marginTop="80dp"
            app:srcCompat="@drawable/banking5" />


    </FrameLayout>

    <TextView
        android:id="@+id/textView27"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Ngân hàng đã liên kết (1)"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.163"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2" />

    <ImageView
        android:id="@+id/imageView16"
        android:layout_width="365dp"
        android:layout_height="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView27"
        app:srcCompat="@drawable/banking4" />


</androidx.constraintlayout.widget.ConstraintLayout>